@page
@model SchoolManagement.Pages.Admin.TeacherDetailModel
@{
} 





<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <!-- 1st container fluid start-->
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Teacher Details</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-page="Dashboard">Home</a></li>
                        <li class="breadcrumb-item active">Teacher Dashboard</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>



    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="card card-primary card-outline card-info">
                    <h5 class="ml-3">Teacher Details</h5>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="teacherDetail.Id" />

                        <div class="card-body ">
                            <div class="row">


           @*                     <div class="col-lg-4">
                                    <label class="ml-2"> Select Name </label>

                                    <select id="NameDropdown" class="form-control select2" asp-items="Model.optionNameDropdown" asp-for="RegistrationID" required></select>

                                </div>

                                <div class="col-lg-4">
                                    <label class="ml-2"> Select Email </label>

                                    <select id="EmailDropdown" class="form-control select2" asp-items="Model.optionEmailDropdown"></select>

                                </div>*@

                                <div class="col-lg-4">
                                    <label class="ml-2"> Name </label>
                                    <input type="text" asp-for="teacherDetail.Name" class="form-control"  placeholder="Name" required>
                                </div>
                                <div class="col-lg-4">
                                    <label class="ml-2">Email</label>
                                    <input type="text" asp-for="teacherDetail.Email" class="form-control"  placeholder="Email" required>
                                </div>
                                 <div class="col-lg-4">
                                    <label class="ml-2"> Phone Number </label>
                                    <input type="text" asp-for="teacherDetail.Phone" class="form-control" maxlength="10" placeholder="Phone Number" required>
                                </div>
                                <div class="col-lg-3">
                                    <label class="ml-2"> Qulification </label>
                                    <input type="text" asp-for="teacherDetail.Qulification" class="form-control" placeholder="Qulification" required>
                                </div>
                                <div class="col-lg-3">
                                    <label class="ml-2"> Account Number </label>
                                    <input type="text" asp-for="teacherDetail.AccountNumber" class="form-control" placeholder="Account Number" required>
                                </div>
                                <div class="col-lg-2">
                                    <label class="ml-2"> Joining Date </label>
                                    <input type="date" asp-for="teacherDetail.JoiningDate" class="form-control"  placeholder="Joining Date" required>
                                </div>
                                <div class="col-lg-2">
                                    <label class="ml-2"> Leaves </label>
                                    <input type="number" asp-for="teacherDetail.TotalLeaves" class="form-control" min="1" max="50" placeholder="Total Leaves" required>
                                </div>
                                <div class="col-lg-2">
                                    <label class="ml-2">Working Days </label>
                                    <input type="number" asp-for="teacherDetail.Attendance" class="form-control" min="1" max="365" placeholder="Working Days" required>
                                </div>
                                <div class="col-md-6">
                                    <label class="ml-2">Address</label>
                                    <textarea rows="1" asp-for="teacherDetail.Address" maxlength="500" class="form-control" placeholder="Address"></textarea>
                                </div>
                                <div class="col-md-6">
                                    <div class="ml-2"> <label>Gender</label></div>
                                    <div class="d-block">
                                        <div class="custom-control custom-radio custom-control-inline ml-4">
                                            <input type="radio" id="customRadioInline1" asp-for="teacherDetail.Geander" value="M" checked="checked" class="custom-control-input">
                                            <label class="custom-control-label" for="customRadioInline1"> MEN </label>
                                        </div>
                                        <div class="custom-control custom-radio custom-control-inline">
                                            <input type="radio" id="customRadioInline2" asp-for="teacherDetail.Geander" value="F" class="custom-control-input">
                                            <label class="custom-control-label" for="customRadioInline2"> WOMEN </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="text-center mt-3">

                                @if (Model.teacherDetail.Id != 0)
                                {
                                    <button type="submit" class="btn btn-info">UPDATE</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-info">SUBMIT</button>

                                }
                            </div>
                        </div>
                    </form>
                </div>
                <form method="post">
                    <div class="card-body card card-outline card-success pl-1">
                        <div class="card-header">
                            <h3 class="mr-2">Datalist</h3>
                        </div>
                        <table id="example1" class="table table-bordered table-striped">
                            <!--For drop menu-->
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col"> Email</th>
                                    <th scope="col">Qulification</th>
                                    <th scope="col">PhoneNumber</th>
                                    <th scope="col">Address</th>
                                    @*<th scope="col">Joining Date</th>
                                    <th scope="col">Account Number</th>*@
                                    <th scope="col"> Leaves</th>
                                    <th scope="col">Working Days</th>
                                    <th scope="col">Gender</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.TeacherDetailsDatalist.Count() > 0)
                                {
                                    foreach (var item in Model.TeacherDetailsDatalist)
                                    {
                                        <tr>
                                           
                                            <td>@item.Name</td>
                                            <td>@item.Email</td>
                                            <td>@item.Qulification</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Address</td>
                                            @*<td>@item.JoiningDate</td>
                                            <td>@item.AccountNUmber</td>*@
                                            <td>@item.TotalLeaves</td>
                                            <td>@item.Attendance</td>
                                            <td>@item.Geander</td>
                                            <td class="mr-5">
                                                <a asp-page="TeacherDetail" asp-route-id="@item.Id" class="btn btn-success">EDIT</a>
                                                <button asp-page-handler="Delete" asp-route-id="@item.Id"
                                                        onclick="return confirm('Are you sure you want to DELETE?')" class="btn btn-danger">
                                                    DELETE
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {

                                    <tr>No data found</tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts{


    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    @{
        if (TempData["success"] != null)
        {
            <script type="text/javascript">
                toastr.success('@TempData["success"]');
            </script>
        }

        if (TempData["error"] != null)
        {
            <script type="text/javascript">
                toastr.error('@TempData["error"]');
            </script>
        }
        if (TempData["info"] != null)
        {
            <script type="text/javascript">
                toastr.info('@TempData["info"]');
            </script>
        }
    }
    
}



