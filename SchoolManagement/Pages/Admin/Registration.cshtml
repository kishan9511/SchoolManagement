@page
@model SchoolManagement.Pages.Admin.RegistrationModel
@{
}




<div class="content-wrapper"> 
    <section class="content-header">
        <div class="container-fluid">
            <!-- 1st container fluid start-->
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Registration</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-page="Dashboard">Home</a></li>
                        <li class="breadcrumb-item active">DataTables</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>



    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="card card-primary card-outline card-info">
                    <h5 class="ml-3">Registration</h5>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="registration.Id" />

                        <div class="card-body ">
                            <div class="row">




                                <div class="col-lg-4">
                                    <label class="ml-2"> Select your Role </label>

                                    <select id="RoleDropdown" class="form-control select2" asp-items="Model.optionRoleDropdown" asp-for="RoleID"></select>

                                </div>


                                <div class="col-lg-4">
                                    <label class="ml-2"> Name </label>
                                    <input type="text" asp-for="registration.Name" class="form-control" placeholder="Name" required>
                                </div>


                                <div class="col-lg-4">
                                    <label class="ml-2"> Email </label>
                                    <input type="text" asp-for="registration.Email" class="form-control" placeholder="Email" required>
                                </div>

                                <div class="col-lg-4">
                                    <label class="ml-2"> Password </label>
                                    <input type="text" asp-for="registration.Password" class="form-control" placeholder="Password" required>
                                </div>

                              
                               
                            </div>



                            <!-- /.card-body -->
                            <div class="text-center mt-3">

                                @if (Model.registration.Id != 0)
                                {
                                    <button type="submit" class="btn btn-info">UPDATE</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-info">SUBMIT</button>

                                }
                            </div>

                        </div>
                    </form>


                </div>




                <form method="post">

                    <div class="card-body card card-outline card-success pl-1">
                        <div class="card-header">

                            <h3 class="mr-2">Datalist</h3>
                        </div>

                        <table id="example1" class="table table-bordered table-striped">
                            <!--For drop menu-->
                            <thead>
                                <tr>
                                    <th scope="col">Your Role</th>
                                    <th scope="col">Name</th>
                                    <th scope="col"> Email</th>
                                    <th scope="col"> Password</th>
                                    <th scope="col">Action</th>

                                </tr>
                            </thead>

                            <tbody>

                                @if (Model.RegistrationDatalist.Count() > 0)
                                {
                                    foreach (var item in Model.RegistrationDatalist)
                                    {
                                        <tr>

                                            <td>@item.RoleName</td>
                                            <td>@item.Name</td>
                                            <td>@item.Email</td>
                                            <td>@item.Password</td>
                                         
                                        
                                            <td class="mr-5">
                                                <a asp-page="Registration" asp-route-id="@item.ID" class="btn btn-success">EDIT</a>

                                            </td>
                                        </tr>
                                    }
                                }

                                else
                                {

                                    <tr>No data found</tr>

                                }

                            </tbody>

                        </table>

                    </div>

                </form>

            </div>
        </div>
    </div>
</div>



@section Scripts{


    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    @{
        if (TempData["success"] != null)
        {
            <script type="text/javascript">
                toastr.success('@TempData["success"]');
            </script>
        }

        if (TempData["error"] != null)
        {
            <script type="text/javascript">
                toastr.error('@TempData["error"]');
            </script>
        }
        if (TempData["info"] != null)
        {
            <script type="text/javascript">
                toastr.info('@TempData["info"]');
            </script>
        }
    }

}