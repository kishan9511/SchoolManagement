@page
@model StudentDetailsModel
@{
}




<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <!-- 1st container fluid start-->
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Student Result Card</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-page="ApprovedForExamination">Home</a></li>
                        <li class="breadcrumb-item active">Student</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>



    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="card card-primary card-outline card-info">
                    <h5 class="ml-3">Student Result Card</h5>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Detail.Id" />
                        <div class="card-body ">
                            <div class="row">

                                <div class="col-lg-3">
                                    <label class="ml-2"> Name </label>
                                    <input type="text" asp-for="Detail.Name" class="form-control" placeholder="Name" required>
                                </div>
                                <div class="col-lg-3">
                                    <label class="ml-2"> USN </label>
                                    <input type="text" asp-for="Detail.Usn" class="form-control" placeholder="USN" required>
                                </div>
                                <div class="col-lg-3">
                                    <label class="ml-2">Email</label>
                                    <input type="text" asp-for="Detail.Email" class="form-control" placeholder="Email" required>
                                </div>

                                <div class="col-lg-3">
                                    <label class="ml-2"> Select Subject </label>
                                    <select id="SubjectNameDropdown" class="form-control select2" asp-items="Model.optionSubjectNameDropdown" asp-for="SubjectID"></select>
                                </div>

                                <div class="col-lg-3">
                                    <label class="ml-2"> Passing Marks </label>
                                    <select id="optionPassingDropdown" class="form-control select2" asp-items="Model.optionPassingDropdown"></select>
                                </div>



                                <div class="col-lg-3">
                                    <label class="ml-2"> Total Marks </label>
                                    <select id="optiontotalpassingmarksDropdown" class="form-control select2" asp-items="Model.optiontotalpassingmarksDropdown"></select>
                                </div>

                                <div class="col-lg-3">
                                    <label class="ml-2"> Select Marks </label>
                                    <select id="MarksDropdown" class="form-control select2" asp-items="Model.optionMarksNameDropdown" asp-for="MarksID"></select>
                                </div>
                                <div class="col-lg-3">
                                    <label class="ml-2"> Select Result </label>
                                    <select id="ResultDropdown" class="form-control select2" asp-items="Model.optionResultNameDropdown" asp-for="ResultID"></select>
                                </div>



                                <div class="col-lg-3">
                                    <label class="ml-2"> Phone Number </label>
                                    <input type="text" asp-for="Detail.Phone" class="form-control" maxlength="10" placeholder="Phone Number" required>
                                </div>
                                <div class="col-lg-3">
                                    <label class="ml-2"> Class </label>
                                    <input type="text" asp-for="Detail.Class" class="form-control" placeholder="Class" required>
                                </div>
                                <div class="col-lg-3">
                                    <label class="ml-2">aadhar card </label>
                                    <input type="text" asp-for="Detail.Attendance" class="form-control" maxlength="12" minlength="1" placeholder="aadhar card" required>
                                </div>


                                <div class="col-md-3">
                                    <div class="ml-2"> <label>Gender</label></div>
                                    <div class="d-block">
                                        <div class="custom-control custom-radio custom-control-inline ml-4">
                                            <input type="radio" id="customRadioInline1" asp-for="Detail.Gender" value="M" checked="checked" class="custom-control-input">
                                            <label class="custom-control-label" for="customRadioInline1"> MEN </label>
                                        </div>
                                        <div class="custom-control custom-radio custom-control-inline">
                                            <input type="radio" id="customRadioInline2" asp-for="Detail.Gender" value="F" class="custom-control-input">
                                            <label class="custom-control-label" for="customRadioInline2"> WOMEN </label>
                                        </div>
                                    </div>
                                </div>


                                <div class="col-md-6">
                                    <label class="ml-2">Address</label>
                                    <textarea rows="1" asp-for="Detail.Address" maxlength="500" class="form-control" placeholder="Address"></textarea>
                                </div>




                            </div>
                            <!-- /.card-body -->
                            <div class="text-center mt-3">

                                @if (Model.Detail.Id != 0)
                                {
                                    <button type="submit" class="btn btn-info">UPDATE</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-info">SUBMIT</button>

                                }
                            </div>
                        </div>
                    </form>


                </div>
                <form method="post">
                    <div class="card-body card card-outline card-success pl-1">
                        <div class="card-header">
                            <h3 class="mr-2">Datalist</h3>
                        </div>
                        <table id="example1" class="table table-bordered table-striped">
                            <!--For drop menu-->
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">USN</th>
                                    <th scope="col"> Subject</th>
                                    <th scope="col">Total Marks</th>
                                    <th scope="col">Passing Marks</th>
                                    <th scope="col">Marks</th>
                                    <th scope="col">aadhar card</th>
                                    <th scope="col">Gender</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.StudentDetailDatalist.Count() > 0)
                                {
                                    foreach (var item in Model.StudentDetailDatalist)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.USN</td>
                                            <td>@item.Subject</td>
                                            <td>@item.TotalMarks</td>
                                            <td>@item.PassinMarks</td>
                                            <td>@item.Marks</td>
                                            <td>@item.Attendance</td>
                                            <td>@item.Gender</td>
                                            <td class="mr-5">
                                                <a asp-page="StudentDetails" asp-route-id="@item.ID" class="btn btn-success">EDIT</a>
                                                <button asp-page-handler="Delete" asp-route-id="@item.ID"
                                                        onclick="return confirm('Are you sure you want to DELETE?')" class="btn btn-danger">
                                                    DELETE
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {

                                    <tr>No data found</tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts{


    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    @{
        if (TempData["success"] != null)
        {
            <script type="text/javascript">
                toastr.success('@TempData["success"]');
            </script>
        }

        if (TempData["error"] != null)
        {
            <script type="text/javascript">
                toastr.error('@TempData["error"]');
            </script>
        }
        if (TempData["info"] != null)
        {
            <script type="text/javascript">
                toastr.info('@TempData["info"]');
            </script>
        }
    }

}