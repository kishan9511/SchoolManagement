@page
@model SchoolManagement.Pages.Teacher.studentLeaveApplicationModel
@{
}


<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <!-- 1st container fluid start-->
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Student Leave Application</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-page="ApprovedForExamination">Home</a></li>
                        <li class="breadcrumb-item active">Student Leave Application</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>


    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">

                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="leave.Id" />

                    <div class="card-body card card-outline card-danger pl-1">
                        <div class="card-header">
                            <h3 class="mr-2">Student Leave Application</h3>
                        </div>
                        <table id="example1" class="table table-bordered table-striped">
                            <!--For drop menu-->
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">USN</th>
                                    <th scope="col">Reason</th>
                                    <th scope="col">View Application</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.StudentLeaveDatalist.Count() > 0)
                                {
                                    foreach (var item in Model.StudentLeaveDatalist)
                                    {
                                        <tr>
                                            <td>@item.NameDropdown</td>
                                            <td>@item.USNDropdown</td>
                                            <td>@item.Reason</td>
                                            <td class="mr-5">
                                                <a asp-page="studentLeaveApplication" asp-route-id="@item.ID" class="btn btn-success">View</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {

                                    <tr>No data found</tr>

                                }
                            </tbody>

                        </table>
                    </div>
                </form>

                <div class="card card-primary card-outline card-info">
                    <h5 class="ml-3">Leave Application</h5>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="leave.Id" />

                        <div class="card-body ">
                            <div class="row">

                                <div class="col-md-6">
                                    <label class="ml-2">USN</label>
                                    <input type="text" asp-for="leave.Usn" class="form-control" placeholder="USN" required>
                                </div>

                                <div class="col-md-6">
                                    <label class="ml-2">Your Name</label>
                                    <input type="text" asp-for="leave.Name" class="form-control" placeholder="Name" required>
                                </div>

                                <div class="col-md-12">
                                    <label class="ml-2">Reason</label>
                                    <textarea rows="6" asp-for="leave.Reason" maxlength="500" class="form-control" placeholder="Write Your Reason"></textarea>
                                </div>

                                  <div class="col-md-3">
                                    <div class="ml-2"> <label>Allow Or Decline</label></div>
                                    <div class="d-block">
                                        <div class="custom-control custom-radio custom-control-inline ml-4">
                                            <input type="radio" id="customRadioInline1" asp-for="leave.Approved" value="Approved" checked="checked" class="custom-control-input">
                                            <label class="custom-control-label" for="customRadioInline1"> Approved </label>
                                        </div>
                                        <div class="custom-control custom-radio custom-control-inline">
                                            <input type="radio" id="customRadioInline2" asp-for="leave.Approved" value="Decline" class="custom-control-input">
                                            <label class="custom-control-label" for="customRadioInline2"> Decline </label>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <!-- /.card-body -->
                            <div class="text-center mt-3">

                                @if (Model.leave.Id != 0)
                                {
                                    <button type="submit" class="btn btn-info">Save</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-info">SUBMIT</button>

                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


