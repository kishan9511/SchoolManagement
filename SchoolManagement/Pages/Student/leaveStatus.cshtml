@page
@model SchoolManagement.Pages.Student.leaveStatusModel
@{
}



<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <!-- 1st container fluid start-->
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1> Check your Leave Application Status</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-page="AttendenceList">Home</a></li>
                        <li class="breadcrumb-item active">DataTables</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>



    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="card card-primary card-outline card-info">
                    <h5 class="ml-3">Select Your USN</h5>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="leaveStatus.Id" />
                        <div class="card-body ">

                            <div class="row">
                                <div class="col-lg-12">
                                    <label class="ml-2"> USN </label>
                                    <select id="USNDropdown" class="form-control select2" asp-items="Model.optionUSNDropdown" asp-for="LeaveID" required></select>
                                </div>


                                <br />
                            </div>
                        </div>
                        <br />
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="card card-primary card-outline card-success">
                    <h5 class="ml-3">Result</h5>
                    <form>
                        <div class="row">
                            <div class="col-lg-4">
                                <h5 class="card-header">
                                    Student Name
                                </h5>
                                <br>
                                <label class="ml-3" id="lblStudentNameId"></label>
                            </div>


                            <div class="col-lg-4">
                                <h5 class="card-header">Reason</h5>
                                <br>
                                <label class="ml-3" id="lblReasonId"></label>
                            </div>


                            <div class="col-lg-4">
                                <h5 class="card-header">Approved</h5>
                                <br>
                                <label class="ml-3" id="lblApprovedId"></label>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>







@section Scripts{


    <script src="~/js/LeaveStatus.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    @{
        if (TempData["success"] != null)
        {
            <script type="text/javascript">
                toastr.success('@TempData["success"]');
            </script>
        }

        if (TempData["error"] != null)
        {
            <script type="text/javascript">
                toastr.error('@TempData["error"]');
            </script>
        }
        if (TempData["info"] != null)
        {
            <script type="text/javascript">
                toastr.info('@TempData["info"]');
            </script>
        }

    }

    }
