@page
@model SchoolManagement.Pages.Student.leaveModel
@{
}



<div class="content-wrapper"> 
    <section class="content-header">
        <div class="container-fluid">
            <!-- 1st container fluid start--> 
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Leave Application</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-page="AttendenceList">Home</a></li>
                        <li class="breadcrumb-item active">DataTables</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>



    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="card card-primary card-outline card-info">
                    <h5 class="ml-3">Leave Application</h5>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="leave.Id" />

                        <div class="card-body ">
                            <div class="row">



                                 <div class="col-md-6">
                                    <label class="ml-2">USN</label>
                                    <input type="text" asp-for="leave.Usn" class="form-control" placeholder="USN" required>
                                </div>


                                <div class="col-md-6">
                                    <label class="ml-2">Your Name</label>
                                    <input type="text" asp-for="leave.Name"  class="form-control" placeholder="Name" required>
                                </div>

                                <div class="col-md-12">
                                    <label class="ml-2">Reason</label>
                                    <textarea rows="6" asp-for="leave.Reason" maxlength="500" class="form-control" placeholder="Write Your Reason"></textarea>
                                </div>


                          
                              
                            </div>
                            <!-- /.card-body -->
                            <div class="text-center mt-3">

                                @if (Model.leave.Id != 0)
                                {
                                    <button type="submit" class="btn btn-info">UPDATE</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-info">SUBMIT</button>

                                }
                            </div>
                        </div>
                    </form>
                </div>
          
            </div>
        </div>
    </div>
</div>



@section Scripts{


    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    @{
        if (TempData["success"] != null)
        {
            <script type="text/javascript">
                toastr.success('@TempData["success"]');
            </script>
        }

        if (TempData["error"] != null)
        {
            <script type="text/javascript">
                toastr.error('@TempData["error"]');
            </script>
        }
        if (TempData["info"] != null)
        {
            <script type="text/javascript">
                toastr.info('@TempData["info"]');
            </script>
        }
    }
    <script src="~/js/usn.js"></script>

    }
